<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Application" Height="1080" Width="1920"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Content="Managers" Click="ManagersButton_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="DarkGreen" Foreground="White" FontSize="20" Padding="20" RenderTransformOrigin="1.539,0.646"/>

        <Button Grid.Row="1" Content="Objects" Click="ObjectsButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Background="DarkBlue" Foreground="White" FontSize="20" Padding="20" Margin="596,0,0,0"/>

        <Button Grid.Row="1" Content="Packages" Click="PackagesButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Background="DarkRed" Foreground="White" FontSize="20" Padding="20" Margin="1239,0,0,0"/>
    </Grid>
</Window>